{
    "name": "personal-site",
    "version": "1.0.2",
    "private": true,
    "scripts": {
        "env": "dotenv -e .env -e .env.local",
        "clear": "rimraf .next .swc node_modules",
        "dev": "cross-env NODE_EXTRA_CA_CERTS=\"$(mkcert -CAROOT)/rootCA.pem\" ts-node scripts/https-server.ts",
        "dev:cert": "mkcert -key-file \"./certificates/dev.key\" -cert-file \"./certificates/dev.crt\" localhost",
        "db": "yarn env -- yarn pnpify prisma db",
        "db:generate": "yarn env -- yarn pnpify prisma generate",
        "db:migrate": "yarn env -- yarn pnpify prisma migrate",
        "build": "yarn db:generate && next build",
        "start": "cross-env NODE_ENV=production yarn dev",
        "lint": "yarn tsc && next lint",
        "test": "jest --config=tests/jest.config.ts",
        "test:e2e": "playwright test --config=tests/playwright.config.ts",
        "analyze": "cross-env ANALYZE=true yarn build && yarn source-map-explorer .next/static/chunks/**/*.js",
        "prepare": "husky install"
    },
    "dependencies": {
        "@mantine/core": "4.2.12",
        "@mantine/form": "4.2.12",
        "@mantine/hooks": "4.2.12",
        "@mantine/modals": "4.2.12",
        "@mantine/next": "4.2.12",
        "@mantine/notifications": "4.2.12",
        "@mantine/prism": "4.2.12",
        "@mantine/spotlight": "4.2.12",
        "@prisma/client": "4.0.0",
        "aos": "2.3.4",
        "bcrypt": "5.0.1",
        "cookie": "0.5.0",
        "ky": "0.30.0",
        "ky-universal": "0.10.1",
        "next": "12.2.2",
        "next-connect": "0.12.2",
        "next-intl": "2.7.4",
        "nodemailer": "6.7.7",
        "pino": "8.1.0",
        "pino-logflare": "0.3.12",
        "react": "18.2.0",
        "react-dom": "18.2.0",
        "react-icons": "4.4.0",
        "react-query": "3.39.1",
        "sharp": "0.30.7",
        "sitemap": "7.1.1",
        "typed.js": "2.0.12",
        "zod": "3.17.3"
    },
    "devDependencies": {
        "@jest/types": "28.1.3",
        "@playwright/test": "1.23.3",
        "@testing-library/jest-dom": "5.16.4",
        "@testing-library/react": "13.3.0",
        "@types/aos": "3.0.4",
        "@types/bcrypt": "5.0.0",
        "@types/cookie": "0.5.1",
        "@types/eslint": "8.4.5",
        "@types/jest": "28.1.5",
        "@types/node": "17.0.45",
        "@types/nodemailer": "6.4.4",
        "@types/prettier": "2.6.3",
        "@types/react": "18.0.15",
        "@types/react-dom": "18.0.6",
        "@types/rimraf": "3.0.2",
        "@types/sharp": "0.30.4",
        "@types/testing-library__jest-dom": "5.14.5",
        "@types/typed.js": "2.0.9",
        "@types/umami": "0.1.0",
        "@yarnpkg/pnpify": "4.0.0-rc.12",
        "cross-env": "7.0.3",
        "dotenv-cli": "6.0.0",
        "eslint": "8.19.0",
        "eslint-config-next": "12.2.2",
        "eslint-config-prettier": "8.5.0",
        "eslint-plugin-jest": "26.6.0",
        "husky": "8.0.1",
        "jest": "28.1.3",
        "jest-environment-jsdom": "28.1.3",
        "picocolors": "1.0.0",
        "prettier": "2.7.1",
        "prisma": "4.0.0",
        "rimraf": "3.0.2",
        "source-map-explorer": "2.5.2",
        "ts-jest": "28.0.6",
        "ts-node": "10.9.1",
        "typescript": "4.7.4"
    },
    "packageManager": "yarn@3.2.1",
    "prisma": {
        "schema": "src/server/persistence/prisma/schema.prisma"
    }
}
