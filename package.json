{
    "name": "personal-site",
    "version": "1.0.4",
    "private": true,
    "scripts": {
        "env": "dotenv -e .env -e .env.local",
        "clear": "rimraf .next .swc node_modules",
        "dev": "cross-env NODE_EXTRA_CA_CERTS=\"$(mkcert -CAROOT)/rootCA.pem\" ts-node scripts/https-server.ts",
        "dev:cert": "mkcert -key-file \"./certificates/dev.key\" -cert-file \"./certificates/dev.crt\" localhost",
        "db": "yarn env -- yarn pnpify prisma db",
        "db:generate": "yarn env -- yarn pnpify prisma generate",
        "db:migrate": "yarn env -- yarn pnpify prisma migrate",
        "build": "yarn db:generate && next build",
        "start": "cross-env NODE_ENV=production yarn dev",
        "lint": "yarn tsc && next lint",
        "test": "jest --config=tests/jest.config.ts",
        "test:e2e": "playwright test --config=tests/playwright.config.ts",
        "analyze": "cross-env ANALYZE=true yarn build && yarn source-map-explorer .next/static/chunks/**/*.js",
        "prepare": "husky install"
    },
    "dependencies": {
        "@emotion/cache": "11.10.3",
        "@emotion/react": "11.10.4",
        "@emotion/serialize": "1.1.0",
        "@emotion/server": "11.10.0",
        "@emotion/utils": "1.2.0",
        "@mantine/core": "5.3.3",
        "@mantine/form": "5.3.3",
        "@mantine/hooks": "5.3.3",
        "@mantine/next": "5.3.3",
        "@mantine/notifications": "5.3.3",
        "@mantine/nprogress": "5.3.3",
        "@prisma/client": "4.3.1",
        "aos": "2.3.4",
        "bcrypt": "5.0.1",
        "cookie": "0.5.0",
        "ky": "0.31.3",
        "ky-universal": "0.10.1",
        "next": "12.3.0",
        "next-connect": "0.13.0",
        "next-intl": "2.7.5",
        "nodemailer": "6.7.8",
        "pino": "8.5.0",
        "pino-logflare": "0.3.12",
        "react": "18.2.0",
        "react-dom": "18.2.0",
        "react-icons": "4.4.0",
        "react-query": "3.39.2",
        "sharp": "0.31.0",
        "sitemap": "7.1.1",
        "typed.js": "2.0.12",
        "zod": "3.19.1"
    },
    "devDependencies": {
        "@jest/types": "29.0.3",
        "@playwright/test": "1.25.2",
        "@testing-library/jest-dom": "5.16.5",
        "@testing-library/react": "13.4.0",
        "@types/aos": "3.0.4",
        "@types/bcrypt": "5.0.0",
        "@types/cookie": "0.5.1",
        "@types/eslint": "8.4.6",
        "@types/jest": "29.0.3",
        "@types/node": "18.7.18",
        "@types/nodemailer": "6.4.6",
        "@types/prettier": "2.7.0",
        "@types/react": "18.0.20",
        "@types/react-dom": "18.0.6",
        "@types/rimraf": "3.0.2",
        "@types/sharp": "0.31.0",
        "@types/testing-library__jest-dom": "5.14.5",
        "@types/typed.js": "2.0.9",
        "@yarnpkg/pnpify": "4.0.0-rc.18",
        "cross-env": "7.0.3",
        "dotenv-cli": "6.0.0",
        "eslint": "8.23.1",
        "eslint-config-next": "12.3.0",
        "eslint-config-prettier": "8.5.0",
        "eslint-plugin-jest": "27.0.4",
        "husky": "8.0.1",
        "jest": "29.0.3",
        "jest-environment-jsdom": "29.0.3",
        "picocolors": "1.0.0",
        "prettier": "2.7.1",
        "prisma": "4.3.1",
        "rimraf": "3.0.2",
        "source-map-explorer": "2.5.2",
        "ts-jest": "29.0.1",
        "ts-node": "10.9.1",
        "typescript": "4.8.3"
    },
    "packageManager": "yarn@3.2.3",
    "prisma": {
        "schema": "src/server/persistence/prisma/schema.prisma"
    }
}
