{
    "name": "personal-site",
    "version": "0.1.0",
    "private": true,
    "scripts": {
        "env": "dotenv -e .env -e .env.local",
        "dev": "cross-env NODE_EXTRA_CA_CERTS=\"$(mkcert -CAROOT)/rootCA.pem\" ts-node scripts/https-server.ts",
        "dev:cert": "mkcert -key-file \"./certificates/dev.key\" -cert-file \"./certificates/dev.crt\" localhost",
        "db": "yarn env -- yarn pnpify prisma db",
        "db:generate": "yarn env -- yarn pnpify prisma generate",
        "db:migrate": "yarn env -- yarn pnpify prisma migrate",
        "build": "yarn db:generate && next build",
        "start": "next start",
        "lint": "yarn tsc && next lint",
        "test": "jest",
        "test:e2e": "playwright test",
        "prepare": "husky install"
    },
    "dependencies": {
        "@mantine/core": "4.2.9",
        "@mantine/form": "4.2.9",
        "@mantine/hooks": "4.2.9",
        "@mantine/modals": "4.2.9",
        "@mantine/next": "4.2.9",
        "@mantine/notifications": "4.2.9",
        "@mantine/prism": "4.2.9",
        "@mantine/spotlight": "4.2.9",
        "@prisma/client": "3.15.1",
        "bcrypt": "5.0.1",
        "cookie": "0.5.0",
        "ky": "0.30.0",
        "ky-universal": "0.10.1",
        "next": "12.1.4",
        "next-connect": "0.12.2",
        "next-intl": "2.6.0",
        "nodemailer": "6.7.5",
        "pino": "7.10.0",
        "pino-logflare": "0.3.12",
        "react": "18.2.0",
        "react-dom": "18.2.0",
        "react-icons": "4.4.0",
        "react-query": "3.39.1",
        "typed.js": "2.0.12",
        "zod": "3.17.3"
    },
    "devDependencies": {
        "@jest/types": "28.1.1",
        "@playwright/test": "1.20.2",
        "@testing-library/jest-dom": "5.16.4",
        "@testing-library/react": "13.3.0",
        "@types/bcrypt": "5.0.0",
        "@types/cookie": "0.5.1",
        "@types/eslint": "8.4.3",
        "@types/jest": "28.1.2",
        "@types/node": "17.0.44",
        "@types/nodemailer": "6.4.4",
        "@types/prettier": "2.6.3",
        "@types/react": "17.0.44",
        "@types/react-dom": "17.0.15",
        "@types/testing-library__jest-dom": "5.14.3",
        "@types/typed.js": "2.0.9",
        "@yarnpkg/pnpify": "4.0.0-rc.9",
        "cross-env": "7.0.3",
        "dotenv-cli": "5.1.0",
        "eslint": "8.12.0",
        "eslint-config-next": "12.1.5",
        "eslint-config-prettier": "8.5.0",
        "eslint-plugin-jest": "26.5.3",
        "husky": "7.0.4",
        "jest": "28.1.1",
        "jest-environment-jsdom": "28.1.1",
        "picocolors": "1.0.0",
        "prettier": "2.6.2",
        "prisma": "3.15.1",
        "ts-jest": "28.0.5",
        "ts-node": "10.7.0",
        "typescript": "4.6.3"
    },
    "packageManager": "yarn@3.2.0"
}
