{
    "name": "personal-site",
    "version": "1.0.5",
    "private": true,
    "scripts": {
        "env": "dotenv -e .env -e .env.local",
        "clear": "rimraf .next .swc node_modules",
        "dev": "cross-env NODE_EXTRA_CA_CERTS=\"$(mkcert -CAROOT)/rootCA.pem\" ts-node scripts/https-server.ts",
        "dev:cert": "mkcert -key-file \"./certificates/dev.key\" -cert-file \"./certificates/dev.crt\" localhost",
        "db": "yarn env -- yarn pnpify prisma db",
        "db:generate": "yarn env -- yarn pnpify prisma generate",
        "db:migrate": "yarn env -- yarn pnpify prisma migrate",
        "build": "yarn db:generate && next build",
        "start": "cross-env NODE_ENV=production yarn dev",
        "lint": "yarn tsc && next lint",
        "test": "jest --config=tests/jest.config.ts",
        "test:e2e": "playwright test --config=tests/playwright.config.ts",
        "analyze": "cross-env ANALYZE=true yarn build && yarn source-map-explorer .next/static/chunks/**/*.js",
        "prepare": "husky install"
    },
    "dependencies": {
        "@emotion/cache": "11.11.0",
        "@emotion/react": "11.11.1",
        "@emotion/serialize": "1.1.2",
        "@emotion/server": "11.11.0",
        "@emotion/utils": "1.2.1",
        "@mantine/core": "5.10.5",
        "@mantine/form": "5.10.5",
        "@mantine/hooks": "5.10.5",
        "@mantine/next": "5.10.5",
        "@mantine/notifications": "5.10.5",
        "@mantine/nprogress": "5.10.5",
        "@prisma/client": "4.16.2",
        "aos": "2.3.4",
        "bcrypt": "5.1.1",
        "cookie": "0.5.0",
        "ky": "0.31.4",
        "ky-universal": "0.10.1",
        "next": "12.3.4",
        "next-connect": "0.13.0",
        "next-intl": "2.21.0",
        "nodemailer": "6.9.7",
        "pino": "8.16.1",
        "pino-logflare": "0.3.12",
        "react": "18.2.0",
        "react-dom": "18.2.0",
        "react-icons": "4.11.0",
        "react-query": "3.39.3",
        "sharp": "0.32.6",
        "sitemap": "7.1.1",
        "typed.js": "2.0.16",
        "zod": "3.22.4"
    },
    "devDependencies": {
        "@jest/types": "29.6.3",
        "@playwright/test": "1.39.0",
        "@testing-library/jest-dom": "5.17.0",
        "@testing-library/react": "13.4.0",
        "@types/aos": "3.0.6",
        "@types/bcrypt": "5.0.1",
        "@types/cookie": "0.5.3",
        "@types/eslint": "8.44.6",
        "@types/jest": "29.5.7",
        "@types/node": "20.8.10",
        "@types/nodemailer": "6.4.13",
        "@types/prettier": "2.7.3",
        "@types/react": "18.2.34",
        "@types/react-dom": "18.2.14",
        "@types/rimraf": "3.0.2",
        "@types/sharp": "0.31.1",
        "@types/testing-library__jest-dom": "5.14.9",
        "@types/typed.js": "2.0.9",
        "@yarnpkg/pnpify": "4.0.0",
        "cross-env": "7.0.3",
        "dotenv-cli": "6.0.0",
        "eslint": "8.52.0",
        "eslint-config-next": "12.3.4",
        "eslint-config-prettier": "8.10.0",
        "eslint-plugin-jest": "27.6.0",
        "husky": "8.0.3",
        "jest": "29.7.0",
        "jest-environment-jsdom": "29.7.0",
        "picocolors": "1.0.0",
        "prettier": "2.8.8",
        "prisma": "4.16.2",
        "rimraf": "3.0.2",
        "source-map-explorer": "2.5.3",
        "ts-jest": "29.1.1",
        "ts-node": "10.9.1",
        "typescript": "4.9.5"
    },
    "packageManager": "yarn@4.0.1",
    "prisma": {
        "schema": "src/server/persistence/prisma/schema.prisma"
    }
}
