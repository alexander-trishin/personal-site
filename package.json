{
    "name": "personal-site",
    "version": "0.1.0",
    "private": true,
    "scripts": {
        "env": "dotenv -e .env -e .env.local",
        "dev": "next dev",
        "dev:cert": "mkcert -key-file \"./certificates/dev.key\" -cert-file \"./certificates/dev.crt\" localhost",
        "dev:https": "cross-env NODE_EXTRA_CA_CERTS=\"$(mkcert -CAROOT)/rootCA.pem\" ts-node scripts/https-server.ts",
        "db:generate": "yarn env -- yarn pnpify prisma generate",
        "db:reset": "yarn env -- yarn pnpify prisma migrate reset",
        "build": "yarn db:generate && next build",
        "start": "next start",
        "lint": "yarn tsc && next lint",
        "test": "playwright test",
        "prepare": "husky install"
    },
    "dependencies": {
        "@mantine/core": "4.1.4",
        "@mantine/form": "4.1.4",
        "@mantine/hooks": "4.1.4",
        "@mantine/modals": "4.1.4",
        "@mantine/next": "4.1.4",
        "@mantine/notifications": "4.1.4",
        "@mantine/prism": "4.1.4",
        "@mantine/spotlight": "4.1.4",
        "@prisma/client": "3.12.0",
        "bcrypt": "5.0.1",
        "cookies-next": "2.0.4",
        "next": "12.1.5",
        "next-intl": "2.6.0",
        "pino": "7.10.0",
        "pino-logflare": "0.3.12",
        "react": "18.0.0",
        "react-dom": "18.0.0",
        "react-icons": "4.3.1"
    },
    "devDependencies": {
        "@playwright/test": "1.20.2",
        "@types/bcrypt": "5.0.0",
        "@types/node": "17.0.25",
        "@types/prettier": "2.6.0",
        "@types/react": "17.0.44",
        "@types/react-dom": "17.0.15",
        "@yarnpkg/pnpify": "4.0.0-rc.2",
        "cross-env": "7.0.3",
        "dotenv-cli": "5.1.0",
        "eslint": "8.12.0",
        "eslint-config-next": "12.1.5",
        "eslint-config-prettier": "8.5.0",
        "husky": "7.0.4",
        "prettier": "2.6.2",
        "prisma": "3.12.0",
        "ts-node": "10.7.0",
        "typescript": "4.6.3"
    },
    "packageManager": "yarn@3.2.0"
}
